#include <stdio.h>
#include<string.h>
#include<time.h>
#include<unistd.h>
#include<windows.h>
#define color SetConsoleTextAttribute
using namespace std;

//EL SIGUIENTE CODIGO DUELE A LA VISTA PERO LA PROFESORA RITA FASOLINO LO ABALO / ACEPTA QUE ES LA MEJOR MANERA DE HACERLO.

int i, j, p, q;

//meteoritos
int linea1[15]{254,254,254,176,176,176,254,254,254,176,176,254,254,176,176}; 
int linea2[15]{254,254,176,176,176,176,254,254,176,176,176,254,254,176,176};
int linea3[15]{176,254,254,254,176,176,254,254,254,176,176,176,254,254,176};
int linea4[15]{176,176,254,254,176,254,254,254,176,176,176,254,254,176,176};
int linea5[15]{254,176,176,176,176,254,254,254,254,176,176,176,254,254,254};


//naves
int linea6[15]{176,176,176,176,176,176,174,174,176,176,176,176,176,174,174};
int linea7[15]{176,176,176,176,176,176,175,176,176,176,176,176,176,176,176};
int linea8[15]{176,176,176,176,176,176,174,176,176,176,174,176,176,176,174};
int linea9[15]{175,176,176,176,175,176,176,176,175,176,176,176,176,176,176};
int linea10[15]{174,176,176,176,174,176,176,176,174,176,176,176,176,176,176};


main()
{
	HANDLE lol;
	lol =  GetStdHandle(STD_OUTPUT_HANDLE);
	
	//actualizar pantalla
	while(1)
	{
		//Imprimir lineas
		for(i=0;i<15;i++)
		{
			
			if(linea1[i]==254)
			{
				color(lol,6);
			}
			else if(linea1[i] == 176)
			{
				color(lol,3);
			}
			printf("%c", linea1[i]);
		}
		printf("\n");
		for(i=0;i<15;i++)
		{
			if(linea2[i]==254)
			{
				color(lol,6);
			}
			else if(linea2[i] == 176)
			{
				color(lol,3);
			}
			printf("%c", linea2[i]);
		}
		printf("\n");
		for(i=0;i<15;i++)
		{
			if(linea3[i]==254)
			{
				color(lol,6);
			}
			else if(linea3[i] == 176)
			{
				color(lol,3);
			}
			printf("%c", linea3[i]);
		}
		printf("\n");
		for(i=0;i<15;i++)
		{
			if(linea4[i]==254)
			{
				color(lol,6);
			}
			else if(linea4[i] == 176)
			{
				color(lol,3);
			}
			printf("%c", linea4[i]);
		}
		printf("\n");
		for(i=0;i<15;i++)
		{
			if(linea5[i]==254)
			{
				color(lol,6);
			}
			else if(linea5[i] == 176)
			{
				color(lol,3);
			}
			printf("%c", linea5[i]);
		}
		
		printf("\n");
		
		for(i=0;i<15;i++)
		{
			if(linea6[i]==254)
			{
				color(lol,6);
			}
			else if(linea6[i] == 176)
			{
				color(lol,3);
			}
			printf("%c", linea6[i]);
		}
		printf("\n");
		for(i=0;i<15;i++)
		{
			if(linea7[i]==254)
			{
				color(lol,6);
			}
			else if(linea7[i] == 176)
			{
				color(lol,3);
			}
			printf("%c", linea7[i]);
		}		
		
		
		
		
		//actualizar lineas una posicion hacia el lado
		for(p=0;p<15;p++)
		{
			if(p==0)
			{
				linea1[15] = linea1[0];
				linea3[15] = linea3[0];
				linea5[15] = linea5[0];
				linea6[15] = linea6[0];
			}

			linea1[p] = linea1[p+1];
			linea3[p] = linea3[p+1];
			linea5[p] = linea5[p+1];		
			linea6[p] = linea6[p+1];		
		}
		
		for(q=14;q>=0;q--)
		{
	
			linea2[q+1] = linea2[q];			
			linea4[q+1] = linea4[q];
			linea7[q+1] = linea7[q];
			
			if(q==0)
			{
				linea2[0] = linea2[15];					
				linea4[0] = linea4[15];	
				linea7[0] = linea7[15];	
			}
		}
		

		//Reiniciar
		sleep(1);
		system("CLS");
	}
}
